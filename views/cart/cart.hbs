<div class="container-fluid mt-3 pt-3  w-100">
    <div class="h2 green text-center mb-2 mt-0 font-weight-bold">Shopping Cart &nbsp;&nbsp;<svg width="1em" height="1em"
            viewBox="0 0 16 16" class="bi bi-cart3" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd"
                d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .49.598l-1 5a.5.5 0 0 1-.465.401l-9.397.472L4.415 11H13a.5.5 0 0 1 0 1H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5zM3.102 4l.84 4.479 9.144-.459L13.89 4H3.102zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm-7 1a1 1 0 1 0 0 2 1 1 0 0 0 0-2zm7 0a1 1 0 1 0 0 2 1 1 0 0 0 0-2z" />
        </svg></div>
    <div class="row">
        <div class="col-12 col-md-8">
            <div class="container">
                {{#if emptyCart}}
                <br>
                <h2 class="text-center">You don't have any items in your cart yet.</h2>
                <h2 class="text-center">Add some to order.</h2>
                {{else}}
                <table class="table table-hover">
                    <thead>
                        <tr class="row">
                            <th class="col-sm-1 d-none d-md-block"> </th>
                            <th class="col-6 col-md-5 ">Product</th>
                            <th class="col-2 ">
                                <span class="d-none d-md-block">Quantity</span>
                                <span class="d-md-none">Qty.</span>
                            </th>
                            <th class="col-2 ">Price</th>
                            <th class="col-2 ">Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each meals}}
                        <tr class="row  border-bottom-1 border-top-0 border-right-0 border-left-0 border border-muted">
                            <th class="col-sm-1 d-none d-md-block mb-auto mt-auto border-top-0"> <img
                                    src="/imgs/products/{{_id}}.jpg" alt="Picture of {{title}}"
                                    class="img-cart img-thumbnail"></th>
                            <th class="col-6 col-md-5 h-100 mb-auto mt-auto border-top-0"><span
                                    class=" ">{{title}}</span>
                            </th>
                            <th class="col-2  h-100 mb-auto mt-auto border-top-0">
                                <div class="row">
                                    <div class="col-6 col-md-4">
                                        <span onclick="window.location.href='/cart/increase/{{_id}}'">

                                            <svg width="1em" height="1em" viewBox="0 0 16 16"
                                                class="bi bi-arrow-up-circle" fill="currentColor"
                                                xmlns="http://www.w3.org/2000/svg">
                                                <path fill-rule="evenodd"
                                                    d="M8 15A7 7 0 1 0 8 1a7 7 0 0 0 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                                                <path fill-rule="evenodd"
                                                    d="M8 12a.5.5 0 0 0 .5-.5V5.707l2.146 2.147a.5.5 0 0 0 .708-.708l-3-3a.5.5 0 0 0-.708 0l-3 3a.5.5 0 1 0 .708.708L7.5 5.707V11.5a.5.5 0 0 0 .5.5z" />
                                            </svg>
                                        </span>
                                        <span onclick="window.location.href='/cart/decrease/{{_id}}'">
                                            <svg width="1em" height="1em" viewBox="0 0 16 16"
                                                class="bi bi-arrow-down-circle" fill="currentColor"
                                                xmlns="http://www.w3.org/2000/svg">
                                                <path fill-rule="evenodd"
                                                    d="M8 15A7 7 0 1 0 8 1a7 7 0 0 0 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                                                <path fill-rule="evenodd"
                                                    d="M8 4a.5.5 0 0 1 .5.5v5.793l2.146-2.147a.5.5 0 0 1 .708.708l-3 3a.5.5 0 0 1-.708 0l-3-3a.5.5 0 1 1 .708-.708L7.5 10.293V4.5A.5.5 0 0 1 8 4z" />
                                            </svg>
                                        </span>
                                    </div>
                                    <div class="col-6 col-md-8 h-100 mb-auto mt-auto border-top-0 ml-0 pl-2 pl-md-0">
                                        {{quantity}}
                                    </div>
                                </div>

                            </th>
                            <th class="col-2  h-100 mb-auto mt-auto border-top-0">{{#moneyFixed}}{{price}}{{/moneyFixed}}</th>
                            <th class="col-2  h-100 mb-auto mt-auto border-top-0">{{#moneyFixed}}{{total}}{{/moneyFixed}}</th>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
                {{/if}}
            </div>
        </div>
        <div class="col-12 col-md-3">
            <div class="container">
                <div class="card">
                    <div class="card-header">
                        Cart Summary
                    </div>
                    <div class="card-body">
                        <p class="card-text text-muted">Total ({{size}})</p>
                        <h5 class="card-title text-right">CAD$ {{#moneyFixed}}{{totalPrice}}{{/moneyFixed}}</h5>
                        <hr>
                        <div class="row ">
                            <div class="container d-flex justify-content-between">
                                <a href="#" class="btn btn-success">Order</a>
                                <a href="#" class="btn btn-danger">Clear</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>