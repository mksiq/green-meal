<div class="block-background">
</div>
<div id="login">
    <form id="formId" method="POST" action="https://httpbin.org/post">
        <div id="loginDiv">
            <h2>Login</h2>
            <p>E-mail</p>
            <p><input type="email" name="email" size="30" required /></p>
            <p>Password:</p>
            <p><input type="password" name="password" min="6" required /></p>
        </div>
        <p class="formButtons">
            <input class="submitButtonsForm confirm" type="submit" name="submit" value="Submit" />
            <input id="close-login-popup" class="submitButtonsForm cancel" type="reset" name="cancel" value="Close"
            onclick="
                    document.getElementsByClassName('block-background')[0].style.display = 'none';
                    document.getElementById('login').style.display = 'none';
                    document.getElementsByTagName('html')[0].style.overflow = 'auto';
            " />
        </p>
    </form>
</div>