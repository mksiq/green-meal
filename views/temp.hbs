

<div class="modal fade" id="some-modal" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content p-4">
            <div class="h3 text-center">
                User Sign-Up
                <button class="close" data-dismiss="modal">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form>
                <div class="form-row">
                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label for="first-name">First Name</label>
                            <input class="form-control" type="text" id="first-name" size="30"
                                placeholder="Enter First Name" required />
                        </div>
                    </div>
                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label for="last-name">Last Name</label>
                            <input class="form-control" type="text" id="last-name" size="30"
                                placeholder="Enter Last Name" required />
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label for="email">E-mail</label>
                    <input class="form-control" type="email" id="email" size="30" placeholder="Enter e-mail" required />
                </div>

                <div class="form-row">
                    <div class="col">
                        <div class="form-group">
                            <label for="password">Password</label>
                            <input class="form-control" type="password" id="password" size="30"
                                placeholder="Enter Password" required />
                            <small class="text-muted">Password must have at least 6 characters.</small>
                        </div>
                    </div>
                    <div class="col-12 col-md-6">
                        <div class="form-group">
                            <label for="confirm-password">Confirm Password</label>
                            <input class="form-control" type="password" id="confirm-password" size="30"
                                placeholder="Enter Password" required />
                        </div>
                    </div>
                </div>

                <div class="row justify-content-between">
                    <div class="col-6 col-md-3"><input type="submit" class="btn btn-success form-control"
                            value="Sign up!"></div>
                    <div class="col-6 col-md-3"><input type="reset" class="btn btn-danger form-control" value="Clear!">
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>





